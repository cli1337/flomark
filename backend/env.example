# ==================================
# üîê DATABASE CONFIGURATION
# ==================================
DATABASE_URL=mongodb://localhost:27017/flomark

# ==================================
# üîë JWT AUTHENTICATION
# ==================================
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ==================================
# üåê SERVER CONFIGURATION
# ==================================
PORT=3000
BACKEND_URL=http://localhost:3000

# ==================================
# üé≠ DEMO MODE CONFIGURATION (Optional)
# ==================================
# Enable demo mode to allow public access to a demo project
# Anyone can view and interact with the demo project without login
DEMO_MODE=false
DEMO_PROJECT_ID=demo-project

# ==================================
# üìß EMAIL/SMTP CONFIGURATION (Optional)
# ==================================
# Required for sending invitation emails and notifications
# Leave empty to disable email functionality

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# SMTP Authentication
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Sender Information
SMTP_FROM_NAME=Flomark
SMTP_FROM_EMAIL=noreply@flomark.com

# ==================================
# üìù SMTP PROVIDER EXAMPLES
# ==================================

# Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password (generate at: https://myaccount.google.com/apppasswords)

# Outlook/Office 365:
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@outlook.com
# SMTP_PASS=your-password

# SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# Mailgun:
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=postmaster@your-domain.mailgun.org
# SMTP_PASS=your-mailgun-password

# Amazon SES:
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-ses-smtp-username
# SMTP_PASS=your-ses-smtp-password

# ==================================
# üîí PRODUCTION NOTES
# ==================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, randomly generated JWT secrets
# 3. Use environment-specific values for BACKEND_URL
# 4. For Gmail, enable 2FA and use App Passwords
# 5. Consider using a dedicated email service (SendGrid, Mailgun, etc.) in production

